{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "backend/main.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": [
          "backend/clip_model/**",
          "backend/tokenizer/**"
        ]
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "backend/main.py" },
    { "source": "/assets/(.*)", "destination": "/frontend/assets/$1" },
    { "source": "/(.*)", "destination": "/frontend/index.html" }
  ]
}