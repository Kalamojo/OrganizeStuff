{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "backend/main.py",
      "use": "@vercel/python",
      "config": {
        "buildCommand": "python -m venv /tmp/venv && . /tmp/venv/bin/activate && pip install --upgrade pip && pip install -r backend/requirements-build.txt && python scripts/prepare_model.py api"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "backend/main.py" },
    { "source": "/(.*)", "destination": "/frontend/index.html" }
    { "source": "/assets/(.*)", "destination": "/frontend/assets/$1" },
  ]
}
