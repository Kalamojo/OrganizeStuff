{
  "version": 2,
  "buildCommand": "pip install -r backend/requirements-build.txt && python scripts/prepare_model.py api",
  "installCommand": "pip install -r backend/requirements.txt",
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/static-build" },
    { "src": "backend/main.py", "use": "@vercel/python" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "backend/main.py" },
    { "source": "/assets/(.*)", "destination": "/frontend/assets/$1" },
    { "source": "/(.*)", "destination": "/frontend/index.html" }
  ]
}