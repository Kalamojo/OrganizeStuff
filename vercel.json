{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "public",
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" },
    { "src": "backend/main.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "handle": "filesystem" },

    { "src": "^/api/(.*)$", "dest": "/backend/main.py" },

    { "src": "^(.*)$", "dest": "/index.html" }
  ]
}
