{
  "version": 2,
  "buildCommand": "bash build_all.sh",
  "builds": [
    {
      "src": "frontend/dist",
      "use": "@vercel/static"
    },
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "backend/main.py" },
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
